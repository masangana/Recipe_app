<div class="page-wrapper">
  <h1 class="page-heading">Public Recipe List</h1>
  <% @public_recipes.each do |recipe| %>
    <%= render partial: 'recipes/cards/public', locals: { recipe: recipe, user_id: recipe.id } %>
  <% end %>
  <% if @public_recipes.empty? %>
    <h1>There are no public recipes to show</h1>
  <% end %>

</div>