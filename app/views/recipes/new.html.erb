<div class="page-wrapper ">
  <div class="form-wrapper">
    <h1 >Add New Recipe</h1>
    <div class="divider"></div>
  <%= form_with model: @recipe, url: user_recipes_url, method: :post do |f| %>
    <div class="form-item">
      <%= f.label :name, class: "form-label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control" %>
    </div>
    <div class="form-item">
      <%= f.label :preparation_time, class: "form-label" %><br />
        <%= f.text_field :preparation_time, autofocus: true, autocomplete: "preparation_time" ,
          class: "mb-3 form-control" %>
    </div>
    <div class="form-item">
      <%= f.label :cooking_time, class: "form-label" %><br />
        <%= f.text_field :cooking_time, autofocus: true, autocomplete: "cooking_time" %>
    </div>
    <div class="form-item">
      <%= f.label :description, class: "form-label" %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
    </div>
    <div class="form-item">
      <%= f.radio_button :public, true %>
        <%= f.label 'Public' , :public=> 'True' %>
          <%= f.radio_button :public, false %>
            <%= f.label 'Private' , :public=> 'False' %>
    </div>
    <div class="actions">
      <%= f.submit "Add recipe" , class: "btn btn-success" %>
    </div>
    <% end %>

  </div>
</div>